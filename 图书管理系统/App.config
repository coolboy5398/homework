<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <connectionStrings>
    <!-- 数据库连接字符串 -->
    <!-- 请根据实际情况修改 Data Source（服务器地址） -->
    <add name="LibraryDB" 
         connectionString="Data Source=localhost;Initial Catalog=LibraryDB;Integrated Security=True" 
         providerName="System.Data.SqlClient"/>
  </connectionStrings>
  
  <appSettings>
    <!-- 借阅期限（天） -->
    <add key="BorrowDays" value="30"/>
  </appSettings>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
</configuration>
